<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Home Page</title>
  </head>
  <body>
    <%- include("./partials/nav") %> <%- include("./partials/script") %>

    <!--  -->
    <h1 class="text-center my-4 display-4">Blogs</h1>
    <!--  -->

    <div class="container mt-4 mb-4">
      <div class="row row-cols-1 row-cols-md-4 g-4">
        <% blogs.forEach(blog => { %>

        <div class="col">
          <div class="card h-100" style="width: 18rem">
            <img
              src="<%= blog.coverImgURL %>"
              class="card-img-top"
              alt="Blog image"
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text">
                <%= blog.body.substring(0, 100) %>...
                <!-- Limit the preview text -->
              </p>
              <a href="blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>

        <% }); %>
      </div>
    </div>
  </body>
</html>
